<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogLoadingTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/main</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_loading_dialog</item>
    </style>

    <!--Toolbar标题文字大小-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c_101010</item>
    </style>

    <declare-styleable name="OneKeyClearEditText">

        <attr name="deletecolor" format="integer" />
        <attr name="prefixText" format="string" />

    </declare-styleable>
    <!-- View分割线 -->
    <style name="ViewDividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/c_E5E5E5</item>
    </style>

    <!-- View分割线 10 -->
    <style name="ViewDividerHorizontal_10_e5e5e5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/c_E5E5E5</item>
    </style>

    <style name="ViewDividerHorizontal_10_f5f5f5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/c_F5F5F5</item>
    </style>

    <style name="ViewDividerHorizontal_10_f2f2f2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/c_F2F2F2</item>
    </style>

    <style name="ViewDividerHorizontal_10_f3f3f3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/c_F3F3F3</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_main_color_5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainCircleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:background">@drawable/bg_main_color_22</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowColor">@color/main_shadow</item>
    </style>
</resources>